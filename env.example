# Perplexity API для ИИ-анализа ответов (ВРЕМЕННО ОТКЛЮЧЕНО)
PERPLEXITY_API_KEY=your_perplexity_api_key_here
PERPLEXITY_ENABLED=false


# База данных
DATABASE_URL=sqlite+aiosqlite:///./data/bot.db

# Настройки веб-сервера
HOST=0.0.0.0
PORT=8080
WEBAPP_URL=https://your-domain.com

# Платежная система Robokassa (опционально)
ROBOKASSA_LOGIN=login
ROBOKASSA_PASSWORD_1=password
ROBOKASSA_PASSWORD_2=password
ROBOKASSA_TEST=True

# Telegram Bot (для отправки уведомлений о готовности отчетов)
BOT_TOKEN=your_telegram_bot_token_here

# Настройки логирования
LOG_LEVEL=INFO
LOG_FORMAT=json

# Настройки тестирования
FREE_QUESTIONS_LIMIT=10

# Цены на премиум отчет (в рублях)
PREMIUM_PRICE_ORIGINAL=6980.00
PREMIUM_PRICE_DISCOUNT=3590.00

# Администраторы бота (ID через запятую, например: 123456789,987654321)
ADMIN_IDS=123456789 